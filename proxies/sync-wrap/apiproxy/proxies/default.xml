<ProxyEndpoint name="default">
    <Flows/>
    <PreFlow name="PreFlow">
        <Request>
            <Step>
                <Name>get-splunk-secrets</Name>
            </Step>
            <Step>
                <Name>add-js-header</Name>
            </Step>
        </Request>
        <Response/>
    </PreFlow>
    <PostClientFlow>
        <Response>
            <Step>
                <FaultRules/>
                <Name>splunk-hec-callout</Name>
            </Step>
        </Response>
    </PostClientFlow>
    <HTTPProxyConnection>
        <BasePath>/sync-wrap</BasePath>
        <VirtualHost>secure</VirtualHost>
    </HTTPProxyConnection>
    <RouteRule name="sync-wrap">
        <Condition>request.queryparam.sync = "true"</Condition>
        <TargetEndpoint>sync-wrap</TargetEndpoint>
    </RouteRule>
    <RouteRule name="upstream">
        <Condition>request.queryparam.sync != "true"</Condition>
        <TargetEndpoint>upstream</TargetEndpoint>
    </RouteRule>
</ProxyEndpoint>
